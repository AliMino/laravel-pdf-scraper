{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel PDF Scraper",
        "version": "1.0.0"
    },
    "paths": {
        "/open-api.json": {
            "get": {
                "summary": "Retrieves the OpenAPI specification for the application's API",
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                },
                "tags": [
                    "Documentation"
                ]
            }
        },
        "/docs": {
            "get": {
                "summary": "Renders the OpenAPI specification for the application's API",
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                },
                "tags": [
                    "Documentation"
                ]
            }
        },
        "api/v1/auth/signup": {
            "post": {
                "summary": "User registration",
                "description": "Allows a new user to sign up for the application.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "409": {
                        "description": "User already exists"
                    }
                },
                "tags": [
                    "Registration & Authentication"
                ]
            }
        },
        "api/v1/auth/login": {
            "post": {
                "summary": "User login",
                "description": "Allows an existing user to log in to the application.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User logged in successfully"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                },
                "tags": [
                    "Registration & Authentication"
                ]
            }
        },
        "api/v1//urls": {
            "post": {
                "summary": "Request a new URL scan",
                "description": "Allows an authenticated user to scan a new URL.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UrlScanRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "URL created successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                },
                "tags": [
                    "URL Scans"
                ],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "description": "Bearer token for authentication"
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "SignupRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    },
                    "password_confirmation": {
                        "type": "string"
                    }
                },
                "required": ["name", "email", "password", "password_confirmation"]
            },
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": ["email", "password"]
            },
            "UrlScanRequest": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string",
                        "format": "url"
                    }
                },
                "required": ["url"]
            }
        }
    }
}